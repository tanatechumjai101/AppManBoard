<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="bottom_bar_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">90dp</item>
    </style>

    <style name="CardViewStyle_show" parent="CardView">
        <item name="cardCornerRadius">60dp</item>
    </style>

    <style name="CardViewStyle_page_feed" parent="CardView">
        <item name="cardCornerRadius">40dp</item>
    </style>

    <style name="CardViewStyle_page_owner" parent="CardView">
        <item name="cardCornerRadius">40dp</item>
    </style>

</resources>
