                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/justify_left" />


            <ImageButton
                    android:id="@+id/action_align_center_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/justify_center" />


            <ImageButton
                    android:id="@+id/action_align_right_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/justify_right" />

            <ImageButton
                    android:id="@+id/action_insert_bullets_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bullets" />

            <ImageButton
                    android:id="@+id/action_insert_numbers_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/numbers" />

            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_blockquote_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blockquote" />

            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_insert_image_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/insert_image" />

            <ImageButton

                    android:id="@+id/action_insert_link_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/insert_link" />

            <ImageButton
                    android:id="@+id/action_insert_checkbox_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/checkbox_on_background" />
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorgray"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/colorWhite">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Subject"
                    android:textColor="#000"
                    android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.5"
                android:background="@color/colorWhite">

            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/ed_subject_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:textSize="30sp"
                    android:singleLine="true"
                    tools:text="ABCDEFG"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">

        <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/webview_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>