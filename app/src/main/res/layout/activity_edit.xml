<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorgray"
              android:gravity="center"
              android:screenOrientation="portrait"
              android:orientation="vertical"
              tools:context=".main.owner.edit.EditActivity">

    <include android:id="@+id/tb_Done_pageEdit" layout="@layout/toolbar_form_activity"/>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            tools:visibility="visible">

        <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/black"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/action_undo_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/undo" />

            <ImageButton

                    android:id="@+id/action_redo_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/redo" />

            <ImageButton
                    android:id="@+id/action_bold_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bold" />

            <ImageButton
                    android:id="@+id/action_italic_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/italic" />


            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_subscript_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/subscript" />


            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_superscript_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/superscript" />


            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_strikethrough_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/strikethrough" />


            <ImageButton
                    android:id="@+id/action_underline_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/underline" />


            <ImageButton
                    android:id="@+id/action_heading1_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h1" />


            <ImageButton
                    android:id="@+id/action_heading2_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h2" />

            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_heading3_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h3" />


            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_heading4_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h4" />


            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_heading5_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h5" />


            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/action_heading6_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/h6" />

            <ImageButton
                    android:id="@+id/action_txt_color_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_color" />

            <ImageButton
                    android:id="@+id/action_bg_color_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_color" />

            <ImageButton
                    android:id="@+id/action_indent_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
